project: "Example"
version: "1.0"
author: "Peter"


contexts:
  staging:
    vars:
      name: Peter
      last_name: Riser
  prod:
    vars:
      name: Peter "Lord DevOp"


commands:
  hello:
    cmd: echo ${name} ${last_name}
    description: "greets a user"
    args:
      - name: name
        type: string
      - name: last_name
        type: string
        default: "the First"
  tail-log:
    cmd: tail -f /var/log/${log_name}
    description: "tails a log in /var/log/"
    args:
      - name: log_name
        type: string
        default: syslog
