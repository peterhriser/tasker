project: "Example"
version: "1.0"
author: "Peter"


contexts:
  staging:
    name: Peter
    last_name: Riser
  prod:
    name: Peter "Lord DevOp"


commands:
  hello:
    cmds: echo Hello ${name} ${last_name}
    description: "greets a user"
    args:
      - name: name
        type: string
      - name: last_name
        type: string
        default: "the First"
  howdy:
    cmds: echo Howdy ${name} ${last_name}
    description: "greets a user"
    args:
      - name: name
        type: string
      - name: last_name
        type: string
        default: "the First"

  yall:
    tasks: howdy yall, ok!
    description: "howdy everyone!"
    args: